{
  "name": "@planjs/utils",
  "version": "1.0.3",
  "description": "Common tools collection",
  "keywords": [
    "es6",
    "promise",
    "uuid"
  ],
  "homepage": "https://github.com/planjs/utils#readme",
  "bugs": {
    "url": "https://github.com/planjs/utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/planjs/utils.git"
  },
  "license": "ISC",
  "author": "fupeng",
  "files": [
    "lib",
    "docs",
    "typings"
  ],
  "main": "dist/index.js",
  "scripts": {
    "doc": "typedoc",
    "prepare": "tsc -p tsconfig-build.json",
    "prepublishOnly": "npm run release",
    "release": "./scripts/release.sh",
    "test": "jest -u"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@planjs/fabric": "^0.0.4",
    "babel-jest": "^26.3.0",
    "commitizen": "^4.2.1",
    "conventional-changelog-cli": "^2.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.3.0",
    "typedoc": "^0.19.1",
    "typedoc-plugin-markdown": "^3.0.0",
    "typescript": "^4.0.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "package.json": [
      "npx sort-package-json",
      "git add"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,json,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "sideEffects": false
}
